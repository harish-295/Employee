@model IEnumerable<Employee.Models.Domain.Employees>
<div class="mt-2" style="width:50%">
    <div class="row">
        <h2>Employee</h2>
        <div class="col-md-4">
            <a href="/Employee/AddEmployee" class="btn btn-primary">Add Employee</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var home in Model)
                    {
                        <tr>
                            <td>@home.Name</td>
                            <td>@home.Description</td>
                            <td>
                                <a class="btn btn-success" href="/Employee/EditEmployee?id=@home.Id">Edit</a>
                                <a class="btn btn-danger" href="/Employee/DeleteEmployee?id=@home.Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No data available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
